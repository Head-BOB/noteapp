<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #25222B;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.noteapp.controller.MainApplicationController">
   <top>
      <HBox alignment="CENTER" onMouseDragged="#onMouseDragged" onMousePressed="#onMousePressed" prefHeight="40.0" style="-fx-background-color: #2B2A33;">
         <children>
            <Button mnemonicParsing="false" onAction="#handleNewNoteAction" style="-fx-background-color: #B0FC38; -fx-text-fill: BLACK;" text="+ Notes">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleMinimize" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand;" text="_">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleMaximize" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand;" text="[]">
               <font>
                  <Font name="Webdings" size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleClose" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-cursor: hand;" text="X">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.3" style="-fx-background-color: #25222B;" BorderPane.alignment="CENTER">
         <items>
            <AnchorPane style="-fx-background-color: transparent;">
               <children>
                  <VBox fx:id="noteListContainer" style="-fx-background-color: #2B2A33; -fx-background-radius: 10;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: transparent;">
               <children>
                  <VBox fx:id="noteEditorContainer" style="-fx-background-color: #2B2A33; -fx-background-radius: 10;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>