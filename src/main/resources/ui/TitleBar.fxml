<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="25.0" maxHeight="25.0" style="-fx-background-color: #25222B;" onMousePressed="#onMousePressed" onMouseDragged="#onMouseDragged" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.noteapp.controller.TitleBarController">
    <children>
        <Region HBox.hgrow="ALWAYS" />
        <Button mnemonicParsing="false" onAction="#handleMinimize" style="-fx-background-color: transparent; -fx-text-fill: #B0FC38; -fx-cursor: hand;" text="_">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleMaximize" style="-fx-background-color: transparent; -fx-text-fill: #B0FC38; -fx-cursor: hand;" text="[]">
            <font>
                <Font name="Webdings" size="10.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleClose" style="-fx-background-color: transparent; -fx-text-fill: #B0FC38; -fx-cursor: hand;" text="X">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
    </children>
    <padding>
        <Insets right="5.0" />
    </padding>
</HBox>